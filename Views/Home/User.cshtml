@model mvc.Models.UserAccount

@{
    ViewData["Title"] = "User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Universitatea Craiova</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" href="~/images/logo.ico">
    <link rel="stylesheet" href="../css/default.css">
    <link rel="stylesheet" href="../css/user.css">

</head>

<body class="userBody">


    <section class="userInfo">
        <h1>Bine ai venit, <span id="username">@Model.UserName</span> </h1>
        <h2>Tip cont: <span id="accountType">@Model.accountType</span></h2>
        <h2>GitHub link: <span id="githubLink">@Model.githubLink</span></h2>
        <h2>Notification settings: <span id="notificationSettings">@Model.notificationSettings</span></h2>
        <h2>Phone number: <span id="PhoneNumber">@Model.PhoneNumber</span></h2>
        <a asp-controller="Home" asp-action="UserSettings" asp-route-id="@Model.Id" class="loginButton">Account settings</a>


        @if (Model.accountType == "Admin")
        {
            <a asp-controller="AssignmentChat" asp-action="Index" class="loginButton">AssignmentChat Controller</a>
            <a asp-controller="Assignment" asp-action="Index" class="loginButton">Assignment Controller</a>
            <a asp-controller="Classroom" asp-action="Index" class="loginButton">Classroom Controller</a>
            <a asp-controller="ClassroomStudents" asp-action="Index" class="loginButton">ClassroomStudents Controller</a>
            <a asp-controller="Document" asp-action="Index" class="loginButton">Document Controller</a>
            <a asp-controller="Notification" asp-action="Index" class="loginButton">Notification Controller</a>
            <a asp-controller="Users" asp-action="Index" class="loginButton">Users Controller</a>
        }
    </section>

</body>
</html>